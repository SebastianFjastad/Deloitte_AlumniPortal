@model  List<Album>

@{
    ViewBag.Title = "Albums";
}

<h2>Albums</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="albumTable" class="table">
    <thead>
    <tr>
        <th>
            Cover Image
        </th>
        <th>
            Title
        </th>
        <th>
            Created Date
        </th>
        <th style="min-width: 120px"></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.CoverImage != null)
                {
                        <img src="~/Assets/Albums/@item.CoverImage.AssetName" alt="cover" width="200" height="150" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td style="min-width: 120px">
                    @Html.ActionLink("Edit", "Edit", new { id = item.AlbumId }, new { @class = "btn btn-default"})
                    @Html.ActionLink("Delete", "Delete", new { id = item.AlbumId }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">
        $(function() {
            $('#albumTable').DataTable({
                "paging": true,
                "ordering": true
            });
        })
    </script>
}