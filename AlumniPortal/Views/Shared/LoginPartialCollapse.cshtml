@using Microsoft.AspNet.Identity

@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()
    <li>
        @Html.ActionLink("Manage profile", "Profile", "Alumni", new { userId = User.Identity.GetUserId() }, htmlAttributes: new { title = "Manage" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()" style="">Log off</a></li>
}
    