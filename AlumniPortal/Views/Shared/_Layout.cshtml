<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.1.0/css/swiper.min.css">
    <script type="text/javascript" src="https://addthisevent.com/libs/1.6.0/ate.min.js"></script>
    <link href="~/Content/jquery.Jcrop.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/jquery.Jcrop.min.css" rel="stylesheet" />
    <style type="text/css">
        .navSmall .navbar-nav > li > a {
            padding-top: 4px !important;
            padding-bottom: 0 !important;
            padding-left: 10px;
            padding-right: 30px;
            height: 28px;
            color: white !important;
        }

        .navSmall {
            min-height: 28px !important;
            background-color: rgb(0, 58, 164);
            border: none;
            color: white !important;
        }

            .navSmall .navbar-nav > li {
                display: inline-block;
            }

        .navMain .navbar-nav > li > a {
            background-color: white;
            color: rgb(0, 58, 164);
            margin-top: 10px;
            font-size: 15px;
        }

        /*for the log in/out partial in the collapse menu dropdown*/
        .navMain .navbar-nav > li > form > li > a {
            background-color: white;
            color: rgb(0, 58, 164);
            margin-top: 10px;
            font-size: 15px;
            text-decoration: none;
            margin-bottom: 15px;
            display: block;
        }

        .navMain {
            margin-bottom: 0;
            background-color: white;
            color: rgb(0, 58, 164);
        }

        .footer {
            color: white;
            background-color: rgb(0, 58, 164);
            padding: 5px;
            padding-bottom: 15px;
            font-size: 10px;
        }

        .footerLinksContainer {
            margin-bottom: 10px;
        }

        .footerLinks {
            margin: 10px 15px 15px 0;
            text-decoration: underline;
        }

        @@media screen and (max-width: 460px) {
            .navSmall .navbar-nav > li {
                display: block;
                float: right;
                clear: both;
            }
        }

        @@media screen and (max-width: 767px) {
            .glyphicon-log-in a {
                margin-top: 10px;
            }

            #logoutForm {
                margin-left: 15px;
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>

    <div class="navSmall navbar navbar-inverse hidden-xs" style="margin-bottom: 0">
        <div class="container">
            <ul class="nav navbar-nav pull-right">
                <li><span class="glyphicon glyphicon-phone" style="margin: 0 3px 0 10px;"></span>@Html.ActionLink("Contact Us", "Contact", "Home", null, new { @style = "display: inline-block;" })</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <div class="navMain navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/Alumni-Logo.png" style="width: 300px; height: 50px;" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("News", "Index", "News")</li>
                    <li>@Html.ActionLink("Careers", "Index", "Careers")</li>
                    <li>@Html.ActionLink("Alumni", "Index", "Alumni")</li>
                    <li>@Html.ActionLink("Specials", "Index", "Specials")</li>
                    <li>@Html.ActionLink("Gallery", "Index", "Gallery")</li>
                    <li>@Html.ActionLink("MyConnect", "Index", "MyConnect")</li>
                    <li class="visible-xs">@Html.ActionLink("Register", "Register", "Account")</li>
                    <li class="visible-xs">@Html.ActionLink("Contact Us", "Contact", "Home", null, new { @style = "display: inline-block;" })</li>
                    <li class="visible-xs">@Html.Partial("LoginPartialCollapse")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="row footer">
            <div class="col-xs-12">
                <div class="col-xs-12 footerLinksContainer">
                    <h4>Legal</h4>
                    <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/about-deloitte-south-africa.html?icid=bottom_about-deloitte-south-africa">About Deloitte South Africa</a>
                    <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/legal.html?icid=bottom_legal">Terms of use</a>
                    <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/privacy.html?icid=bottom_privacy">Privacy</a>
                    <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/cookies.html?icid=bottom_cookies">Cookies</a>
                </div>
                <div class="col-md-8">
                    © 2015. See Terms of Use for more information.
                    Deloitte refers to one or more of Deloitte Touche Tohmatsu Limited, a UK private company limited by guarantee (“DTTL”),
                    its network of member firms, and their related entities. DTTL and each of its member firms are legally separate and independent
                    entities. Please see <a href="http://www.deloitte.com/about">www.deloitte.com/about</a> for a detailed description of DTTL and
                    its member firms.
                </div>
                <div class="col-md-4">
                    @Html.Partial("SocialMedia")
                </div>
            </div>
        </div>
    </footer>
    <!-- AddThisEvent -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.1.0/js/swiper.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUI")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/calendar")
    @Scripts.Render("~/bundles/imageupload")
    <script src="~/Scripts/jquery.Jcrop.min.js" type="text/javascript"></script>
    <script src="~/Scripts/App/ImageResizer.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
