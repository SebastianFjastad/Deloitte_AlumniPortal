<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        body {
            background: url(/Content/LoginBackground.jpg) no-repeat center center fixed;
            background-size: cover;
        }

        .navSmall .navbar-nav > li > a {
            padding-top: 4px !important;
            padding-bottom: 0 !important;
            padding-left: 3px;
            height: 28px;
            color: white !important;
        }

        .navSmall {
            min-height: 28px !important;
            background-color: rgb(0, 58, 164);
            border: none;
            color: white !important;
        }

        .navMain .navbar-nav > li > a {
            background-color: white;
            color: rgb(0, 58, 164);
        }

        .navMain {
            background-color: white;
            color: rgb(0, 58, 164);
        }

        .footerContainer {
            color: white;
            background-color: rgb(0, 58, 164);
            font-size: 10px;
        }

        .footerLinks {
            margin: 10px 15px 15px 0;
            text-decoration: underline;
        }

    @@media screen and (min-height: 800px) {
        footer {
            position: fixed;
            bottom: 0;
        }
}
    </style>

</head>
<body>
    @*<div class="wrapper">*@
        <div class="navSmall navbar navbar-inverse" style="margin-bottom: 0">
            <div class="container">
                <ul class="nav navbar-nav pull-right">
                    <li><span class="glyphicon glyphicon-phone" style="margin: 0 3px 0 10px;"></span>@Html.ActionLink("Contact Us", "Contact", "Home", new { @style = "display: inline-block;" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

        <div class="navMain navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img alt="Brand" src="~/Content/Alumni-Logo.png" height="60" width="320" style="margin-left: -15px">
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav"></ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>

        <footer>
            <div class="row">
                <div class="col-xs-12 footerContainer">
                    <div class="col-xs-12">
                        <div class="col-xs-12 footerLinksContainer form-group">
                            <h4>Legal</h4>
                            <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/about-deloitte-south-africa.html?icid=bottom_about-deloitte-south-africa">About Deloitte South Africa</a>
                            <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/legal.html?icid=bottom_legal">Terms of use</a>
                            <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/privacy.html?icid=bottom_privacy">Privacy</a>
                            <a class="footerLinks" href="http://www2.deloitte.com/za/en/legal/cookies.html?icid=bottom_cookies">Cookies</a>
                        </div>
                        <div class="col-md-8 form-group">
                            © 2015. See Terms of Use for more information.
                            Deloitte refers to one or more of Deloitte Touche Tohmatsu Limited, a UK private company limited by guarantee (“DTTL”),
                            its network of member firms, and their related entities. DTTL and each of its member firms are legally separate and independent
                            entities. Please see <a href="http://www.deloitte.com/about">www.deloitte.com/about</a> for a detailed description of DTTL and
                            its member firms.
                        </div>
                        <div class="col-md-4 form-group">
                            @Html.Partial("SocialMedia")
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    @*</div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUI")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/plugins")
    @RenderSection("scripts", required: false)
</body>
</html>
