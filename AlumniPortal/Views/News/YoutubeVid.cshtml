@model AlumniPortal.Entities.Video

@{
    var vidsource = "";
    if (Model != null)
    {
        vidsource = "https://www.youtube.com/embed/" + Model.YouTubeId;
    }
}

<style type="text/css">
    .wrapper {
        width: 100%;
        max-width: 600px;
        height: 100%;
        margin: 0 auto;
        background: #CCC;
    }

    .h_iframe {
        height: 250px;
        padding-top: 56%;
    }

        .h_iframe iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>

@if (Model != null)
{
    <div class="wrapper">
        <div class="h_iframe">
            <iframe height="2" width="2" src="@vidsource" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
}
else
{
    <h3>No video</h3>
}
