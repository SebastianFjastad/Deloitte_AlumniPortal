@using AlumniPortal.Models
@model AlumniPortal.Entities.Article
@{
    ViewBag.Title = "Article";
}

<style type="text/css">
        .hr {
            margin-top: 10px;
            margin-bottom: 10px;
            border-color: lightgrey;
        }

        .headingPrimary {
            text-align: center;
            color: rgb(3, 65, 128);
            font-weight: bolder;
        }
         .articleTitle {
            margin-top: 10px;
            font-weight: bold;
            color: rgb(117, 115, 115);
        }

        .articleDate, .articleDay {
            position: relative;
            color: #fff;
            font-weight: 700;
            background-color: rgba(0, 227, 255, 0.26);
            z-index: 999;
            text-align: center;
        }

        .articleDay {
            text-decoration: underline;
            font-size: 20px;
            padding: 0 5px 0 5px;
        }

        .articleDate {
            font-size: 10px;
            padding: 0 5px 10px 5px;
        }

        .dateContainer {
            width: 50px;
            float: left;
            position: absolute;
            top: 67px;
            right: -15px;
        }

        @@media screen and (max-width: 767px) {

        .dateContainer {
            position: absolute;
            top: 67px;
            right: inherit;
        }
    }
</style>

<div class="row">

    <div class="col-sm-2">
        <div class="dateContainer">
            <div class="articleDay">7</div>
            <div class="articleDate">JUL</div>
        </div>
    </div>

    <div class="col-sm-7">
        <h3 class="headingPrimary">News</h3>
        <hr class="hr" />

        <div class="form-group">
            <div style="background: url(@Url.Content("~/Assets/Articles/" + Model.Assets.First(f => f.FileType == FileType.ArticleImage).AssetName)) no-repeat center center; background-size: cover; height: 150px; width: 100%"></div>
        </div>
        <div class="form-group">
            <h4 class="articleTitle">@Model.Title</h4>
        </div>
        <div class="form-group" style="word-break: break-all;">
            @(Html.Raw(Model.Body))
        </div>
    </div>
    <div class="col-sm-3" style="margin-top: 15px; min-width: 242px;">
        @Html.Action("Calendar", "Events", new { isVertical = true })
        @Html.Action("GalleryPartial", "Gallery")
    </div>
</div>